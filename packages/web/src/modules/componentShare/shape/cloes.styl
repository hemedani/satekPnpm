.close
    position: relative;
    display: inline-block;
    width: 50px;
    height: 50px;
    overflow: hidden;
    &::before
    &::after 
        content: '';
        position: absolute;
        height: 2px;
        width: 100%;
        top: 50%;
        left: 0;
        margin-top: -1px;
        background: #000;
    &::before
        transform: rotate(45deg);
    &::after 
        transform: rotate(-45deg);