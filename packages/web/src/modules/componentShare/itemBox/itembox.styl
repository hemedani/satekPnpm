.item-box
  display flex
  margin 0 .2rem 1rem .2rem
  .title
    font-family FontDefault
    font-size 0.8rem
    color $grayLight
    margin-left .5rem
  .text
    font-family FontDefault
    font-size 0.8rem

.cnt-item-box-quad
  display flex
  flex-wrap wrap
  .item-box
    width 23%

.cnt-item-box-triple
  display flex
  flex-wrap wrap
  .item-box
    width 30%

.cnt-item-box-twice
  display flex
  flex-wrap wrap
  .item-box
    width 48.5%

.cnt-item-box-odd
  display flex
  flex-wrap wrap
  .item-box
    width 100%



