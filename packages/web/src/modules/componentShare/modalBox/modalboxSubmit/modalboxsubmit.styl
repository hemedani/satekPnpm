.containerSubmit-ModalBoxSubmit
    height 60%
    justify-content center
    align-items center
    flex-direction column
    display flex
.message-Submit-ModalBoxSubmit
    margin 1rem 0 0 0
    font-family FontBold
    color $yellow
.message-cancel-Submit-ModalBoxSubmit
    color $red
.message-accept-Submit-ModalBoxSubmit
    color $greenDark
.notification-Submit-ModalBoxSubmit
    font-family FontMedium
    margin 1rem 0 0 0
    line-height 1.5rem
    text-align center
    font-size 0.7rem
    width 30%
    color $grayDark
.submitAccept-ModalBoxSubmit
    width 6rem
    color $dark
    border-radius 50%
    height 6rem
.boxButton-ModalBoxSubmit
    height 25%
    display flex
    align-items center
    flex-direction column
    justify-content center
.textCancel-ModalBoxSubmit
    color $blueLight
    font-family FontMedium
    cursor pointer
    margin 1rem
.circle-icon-ModalBoxSubmit
    display: flex
    justify-content: center
    align-items: center
    border-radius: 50%
    width: 5rem
    height 5rem 
.circle-cancel-icon-ModalBoxSubmit
    background-color unset 
    border: 0.1rem solid $red
.icon-color-ModalBoxSubmit
    color $red
    font-size: 2rem
.icon-color-default-ModalBoxSubmit
    font-size: 5rem
    color $yellow 
.icon-color-green-default-ModalBoxSubmit
    font-size: 5rem
    color $greenDark 
.btn-ModalBoxSubmit
    min-width 10rem
.form-container-ModalBoxSubmit
    flex 1
    display: flex
    flex-direction: column
    justify-content: space-evenly