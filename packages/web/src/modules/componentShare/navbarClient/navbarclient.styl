.nav-client
    display flex
    direction rtl
    justify-content space-between
    align-items center
    height 100%
    background-color $blueDark
.field-nav-client
    display flex
    direction ltr
    padding: 0
    color white
    font-family FontMedium
    position relative
    justify-content space-around
    list-style-type none
.left-nav-client
    flex 1 4 15em
.right-nav-client
    flex 6 1 6em
.logoIcon-nav-client
    height 2.5rem
    margin-right 2rem
.alarm-notification-nav
    display: flex
    justify-content: center
    border-radius: 50%
    font-size: 0.8rem
    width  1rem
    height 1rem
    top: 0.7rem;
    position: absolute
    margin: 0 0.9rem 0 0 
    font-family: fontMedium
    align-items: center
    background-color: $yellow
.list-account
    cursor pointer
    direction: rtl
    display: flex
    font-size: 0.8rem
.icon-nav
    font-size: 1rem
    margin: 0 0.3rem 0.3rem 0
.nav-navbarlogo
    display: flex
    margin-right: 0.5rem
    align-items: center
.logoicon-navbarlogo
    height 2rem
    width: 2rem
.textlogoicon-navbarlogo
    margin-right: 1rem
    height 2rem
.ic_hamburger_menu
    color: white
.hamburger-icon-navbarlogo
    margin-left 0.3rem
    display none
    @media only screen and (max-width: 660px) 
        display block