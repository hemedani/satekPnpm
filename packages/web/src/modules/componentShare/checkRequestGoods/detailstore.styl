.animationDetailStore-admin   
    margin:0rem 0.8rem 0rem 1.5rem
    font-family FontMedium
    display flex 
    height: 3rem 
    padding: 0
    font-size: 0.2rem                                                     
    direction: rtl;
    align-items center
    -webkit-animation-name: example; /* Safari 4.0 - 8.0 */
    -webkit-animation-duration: 4s; /* Safari 4.0 - 8.0 */
    animation-name: example;
    animation-duration: 2s;
    border-bottom 1px solid $grayLight
    border-top:  1px solid $grayLight
    justify-content space-around
    @media only screen and (max-width: 1100px)  
        flex-direction column
@-webkit-keyframes example 
    0%   {height: 3rem; }
    25%  {height: 1.7rem; }
    50%  {height: 2.5rem; }
    100% {height:3rem; }
 
@keyframes example 
    0%   {height: 3rem; }
    25%  {height: 1.7rem; }
    50%  {height: 2.5rem; }
    100% {height:3rem; }
.box-btn-animation-DetailStore-admin
    width: 12rem
    display: flex
    justify-content: space-around
.row-animation-DetailStore-admin
    display: flex
    width: 100%;
    justify-content: space-around
.text-animation-DetailStore-admin
    font-family FontMedium
    color: $yellow
    font-size: 1.2rem
    margin: 0
.DetailStore-admin
    font-family FontMedium
    display flex 
    height: 3rem
    padding: 1rem 0
    direction: rtl;
    align-items center
    margin:0.3rem 0.8rem 0.5rem 1.5rem
    border-bottom 1px solid $grayLight
    border-top:  1px solid $grayLight
    justify-content space-around
    @media only screen and (max-width: 1100px)  
        flex-direction column

.field-right-detailStore-depManger
    display flex
    flex-direction column
    flex 4
    width 100%
.field-left-detailStore-depManger
    display flex
    justify-content space-between
    flex 3
    width 100%
    @media only screen and (max-width:  750px)  
        flex-direction: column
        width: 100%
.none-animation
    display none
.row-detailStore-depManger 
    display flex
    flex 1
    justify-content space-between
    @media only screen and (max-width: 750px)  
        flex-direction: column
        width: 100%
.column-detailStore-history-depManger
    display flex
    align-items: center
    flex 1
.column-detailStore-depManger
    display flex
    align-items: center
    flex 2
.castFinal-detailStore-depManger
    align-items center
    display flex
.title-detailStore
    margin 0   
    display: flex
    white-space unset
    align-items: center;
    padding-left 0.5rem
    font-family: "IRANSANS";
    color: #a3a3a3;
    font-size: 0.8rem;
.name-detailStore
    margin 0
.title-comment-castFinal-detailStore-depManger
    font-size 0.7rem
    margin 0 0 0 0.5rem
    color $blueDark
.title-castFinal-detailStore-depManger
    font-size 0.9rem
    margin 0
    margin 0 0 0 0.3rem
    color $blueDark
.title-cast-detailStore-depManger
    font-size 0.9rem
.boxButton-detailStore-depManger 
    display flex
    flex-direction column
    justify-content center
    align-items flex-end
    @media only screen and (max-width:  750px)  
        align-items center
.responsive-DetailStore-admin
    display: flex  
    flex: 1
    width 100%