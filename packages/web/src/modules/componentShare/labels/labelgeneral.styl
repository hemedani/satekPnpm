.label-general-cnt
    height 1.7rem
    display flex
    font-family FontMedium
    font-size 0.7rem
    border-radius 5rem
    min-width: 30%;
    padding: 0 .5rem;
    margin: .2rem .1rem
    align-items center
    color: $dark
    justify-content space-between
    background-color: rgba(163, 163, 163, 0.18);
    .delete
        font-family: FontBold
        margin-right: 1rem
        color: $red
        cursor pointe
    .name
        cursor default
    .delete:hover
        text-shadow: 0 0 1px $red
        cursor pointer
    .icon
        padding: 0
        .ic_delete:before
            color: $red