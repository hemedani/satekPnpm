.levelRequest
    display: flex
    justify-content: space-around 
    margin: 0 3rem
    align-items: center
    @media only screen and (max-width: 995px)  
        flex-direction: column
        margin: 0 0.2rem
.up-boxItem-levelRequest
    flex 5
    display: flex 
    justify-content: center
    width 100%
    position relative
    align-items: center
.line-levelRequest 
    height: 2px 
    z-index 0
    left 0
    width 100%
    position absolute 
    
.tickIcon
    font-size: 70%  
    color: white
.line-left-levelRequest 
    height: 2px 
    z-index 0
    left 0
    width 50%
    position absolute
    @media only screen and (max-width: 995px)  
        display: none 
.lineBox-levelRequest
    align-items: center
    display: flex 
    flex: 1
    flex-direction: column
    height 100%
    position relative 
    @media only screen and (max-width: 995px)  
        display: none
.line-right-levelRequest     
    height: 2px 
    z-index 0
    right  0
    width 50%
    position absolute
    @media only screen and (max-width: 995px)  
        display: none 
.circle-levelRequest 
    height: 30px
    width: 30px
    z-index 1
    display: flex
    justify-content: center
    align-items: center
    border-radius: 50%
.down-boxItem-levelRequest
    flex 1
    justify-content: center
    width 100%
    display: flex
.boxItem-levelRequest 
    display: flex
    flex-direction: column 
.title-boxItem-levelRequest
    font-family: "IRANSANS_MEDIUM"
    margin: 1rem 0 1rem 0
    font-size: 0.55rem    
    height: 0.5rem
    @media only screen and (max-width: 995px)  
        margin: 0.5rem 0 1rem 0
        text-align: center
.color-blue-levelRequest
    background-color: #4f68c4 
.color-red-levelRequest
    background-color: $red
.color-gray-levelRequest
    background-color: #a3a3a3 
.text-blue-levelRequest
    color: #4f68c4 
.text-red-levelRequest
    color: $red
.texts-gray-levelRequest
    color: #a3a3a3 