.SubmitNewRequest-client
    display flex
    direction rtl
    width 100%
    height 100%
    justify-content space-between
    flex-direction column
.up-SubmitNewRequest-client
    display: flex
    flex-direction: column
    height 35%
    justify-content: space-between
.notification-SubmitNewRequest-client
    display flex
    align-items center
.Part-SubmitNewRequest-client
    display flex
    height 70%
    width 75%
    @media only screen and (max-width: 800px)  
        width 95%
    @media only screen and (max-height: 580px)  
        height 95%  
.container-SubmitNewRequest-client
    display flex
    height 100%
    width 100%
    flex-direction column
    justify-content center
    align-items: center
.text-notification-SubmitNewRequest-client
    margin 0
    color $grayDark
    font-size 0.8rem
    font-family FontMedium
.boxInput-SubmitNewRequest-client
    display flex
    flex: 1
    margin: 0.5rem 0
    align-items center
    flex-wrap: wrap
    justify-content space-between
    @media only screen and (max-width: 800px)  
        flex-direction: column
.boxInput-center-SubmitNewRequest-client
    align-items flex-end
    margin: 0.5rem 0
    
.input-SubmitNewRequest-client
    width 80%
.historyNeedGoods-SubmitNewRequest-client
    width 30%
    align-items center
    display flex 
    margin: 0.5rem
    min-width 10rem
    @media only screen and (max-width: 800px)  
        width 100%
.checkBoxDelivery-SubmitNewRequest-client
    display flex
    align-items center
.SelectBox-SubmitNewRequest-client
    align-items center
    display flex 
    width: 80%
    flex-direction column
.titleSelectBox-SubmitNewRequest-client
    font-family FontMedium
    color $grayLight
    padding-bottom: 0.1rem
    font-size 0.6rem
    margin 0
.textCheckBox-SubmitNewRequest-client
    font-size:1rem
    margin-right 0.5rem
    font-family FontMedium
.unit-SubmitNewRequest-client
    width 20%
    display flex
    min-width 10rem
    margin: 0.5rem
    align-items center
    @media only screen and (max-width: 800px)  
        width 100%
.timeDelivery-SubmitNewRequest-client
    display flex
    width 40%
    justify-content space-between
    align-items center
.boxButtonTime-SubmitNewRequest-client
    display flex
    margin-bottom 1.2rem
    align-items center 
    justify-content: center
    font-family FontMedium
.button-SubmitNewRequest-client
    background-image linear-gradient(90deg, $blueLight, $blueDark)
    padding 0.4rem 1rem 0.4rem 1rem
    border none
    color white
    border-radius 0.4rem
.select-SubmitNewRequest-client
    width: 20%
    display: flex
    min-width 9rem
    margin: 0.5rem
    align-items: center
    @media only screen and (max-width: 800px)  
        width 100%
.boxunit-SubmitNewRequest-client
    display: flex
    align-items: center
    width: 80%
    padding-right: 9rem
    margin: 0.5rem 0