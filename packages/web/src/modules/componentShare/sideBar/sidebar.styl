
.SideBar
    font-family FontMedium
    direction rtl
    display flex
    flex-direction column
    background-color white
    width 13rem
    @media only screen and (max-width: 660px) 
        display none
        position: absolute
        z-index 3
    a
        text-decoration none
    .side-bar-menu-item
        display flex
        margin .2rem 0 .2rem 0
        padding .6rem .4rem .6rem .4rem
        align-items center
        border-radius .5rem
        cursor pointer
        font-family FontMedium
        color $violet
        font-size .7rem
        .icon
            margin-left .5rem
    .side-bar-menu-item:hover
        background-color $blueDark
        color white
        transition-duration 0.2s
        .icon:before
            color white
            transition-duration 0.2s
    .side-bar-menu-item:active
        box-shadow 0 0 .5rem $blueDark
        transition-delay 0s
.SideBar-show
    @media only screen and (max-width: 660px) 
        height calc(100% - 3rem);
        display flex
.accordion__section
    list-style-type none
    width 100%
    display flex
    flex-direction column
    .hover-mono-item
        background-color #c900ff0d

.accordion
    background-color white
    cursor pointer
    padding 0 1.1rem
    display flex
    align-items center
    border none
    outline none
    transition background-color 0.6s ease
    &:hover
        background-color #c900ff0d
        transition-duration 0.5s
        border none

.accordionhover,
.enable-accordion-item
    background-color #c900ff0d

.hover-accordion-item
    background-color $blueDark
    .title
        color: white
    .icon:before
        color white

.accordion__title
    font-family FontMedium
    font-size .8rem
    margin-right .5rem

.accordion__icon
    transform rotate(180deg)
    margin-right auto
    transition transform 0.6s ease

.rotate
    transform rotate(90deg)


.accordion__content
    background-color white
    overflow hidden
    transition max-height 0.6s ease


.accordion__text
    font-family FontDefault
    font-weight 400
    font-size 14px
    padding 0 1.1rem 0 1.1rem

