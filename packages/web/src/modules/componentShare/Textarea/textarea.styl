.textarea-cnt
  flex-direction column
  display flex
  .title
    font-family FontBold
    color $grayDark
    margin 0
    font-size 0.9rem
    width 10rem
  .textarea
    flex 1
    height 95%
    font-family: FontDefault
    font-size: .8rem
    color: $dark
    line-height 1.5rem
    border-radius 0.2rem
    border 0px solid $violet
    overflow auto
    resize none
  .textarea.true
    box-shadow 0 0 .15rem $violet