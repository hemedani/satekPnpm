.SearchGoods-client
    display flex
    direction rtl
    flex-direction: column 
.Vertical
    flex-direction: column
.boxes-SearchGoods-client
    display flex
    flex 6 1 3em
    justify-content space-around
    @media only screen and (max-width: 995px)  
        flex-direction: column
.searchNameGoods-SearchGoods-client
    display flex
    align-items center
    width 32%
    margin: 0.2rem 0
    @media only screen and (max-width: 995px)  
        width 100%
.title-SearchGoods-client
    font-size: 0.7rem
    font-family: FontMedium 
    white-space nowrap
    margin-left: 0.5rem
    @media only screen and (max-width: 995px)  
        width 5rem
.groupGoods-SearchGoods-client
    display flex
    align-items center
    width 30%
    margin: 0.2rem 0
    @media only screen and (max-width: 995px)  
        width 100%
.subgroupGoods-SearchGoods-client
    display flex
    align-items center
    width 30%
    margin: 0.2rem 0
    @media only screen and (max-width: 995px)  
        width 100%
.text-SearchGoods-client
    white-space nowrap
    margin 0 0 0 5px
.input-SearchGoods-client
    width 100%
    height 35%
.box-button-SearchGoods-client
    display flex
    width 100%
    flex 1 1 1rem
    justify-content center
    align-items center
.button-SearchGoods-client
    background-color $blueDark
    border none
    color white
    width 7rem
    height 2rem
    padding 0
    border-radius 5px
.notification-searchGoods
    display: flex
    margin-bottom: 0.8rem
    align-items: center
.text-notification-searchGoods
    font-family: FontMedium 
    font-size: 0.65rem
    margin: 0 0.5rem
    color: $grayDark