.ProductRequestHistory-client
    display flex
    direction rtl
    justify-content space-between
    flex-direction column
.row-ProductRequestHistory-client
    display flex
    justify-content space-around
    margin 0 0 0.8rem 0
.searchNameCodeGoods-ProductRequestHistory-client
    display flex
    align-items center
    width 30%
    margin-bottom: 0.3rem
    @media only screen and (max-width: 1030px)  
        justify-content center
        width 100%
.input-searchNameCodeGoods-ProductRequestHistory
    width: 100%
.applicationFilingDate-ProductRequestHistory-client
    align-items center
    display flex
    justify-content space-between
    width 30%
    margin-bottom: 0.3rem
    @media only screen and (max-width: 1030px)  
        width 100%
        justify-content center
.Condition-ProductRequestHistory-client
    display flex
    align-items center
    width 25%
    @media only screen and (max-width: 1030px)  
        width 100%
        justify-content center
.inputApplicationFilingDate-ProductRequestHistory-client
    width 50%
    border-radius 0.3rem
    height 1.8rem
    border 1px solid $grayLight
    min-height 1rem
.inputCondition-ProductRequestHistory-client
    border-radius 0.3rem
    height 1.8rem
    border 1px solid $grayLight
    min-height 1rem
    width 50%
.TrackingCode-ProductRequestHistory-client
    align-items center
    display flex
    width 28%
    justify-content space-between
.submittedRequest-ProductRequestHistory-client
    align-items center
    display flex
    width 25%
.boxButton-ProductRequestHistory-client
    display flex
    width 100%
    justify-content center
    height 2em
    margin-top 0.8rem
    align-items center
.Button-ProductRequestHistory-client
    background-color $blueDark
    border none
    color #fff
    width 7rem
    font-family FontMedium
    height 2rem
    padding 0
    border-radius 5px
.textCheckbox-ProductRequestHistory-client
    font-size 0.7rem
    white-space nowrap
    margin 0 0.5rem 0 0
    font-family FontMedium
.textInput-inputApplicationFilingDate-client
    font-size 0.8rem
    font-family FontMedium
.title-ProductRequestHistory-client 
    white-space: nowrap 
    width: 7rem
    font-family: "IRANSANS_MEDIUM"; 
    margin: 0;
    font-size: 0.8rem;
.datePicker-ProductRequestHistory
    width 100%
    font-family: "IRANSANS_LIGHT";
    height 1.7rem
    flex: 1
    border-radius: 0.2rem; 
    box-shadow: 0 0 0.15rem #702684; 
.medium-ProductRequestHistory
    width: 100%