.container-cnt
  flex-direction column
  display flex
.container-title
  font-family FontBold
  margin 0
  padding 0 0.7rem 0.1rem 0
  margin-bottom .5rem
  font-size 0.9rem
  color $blueLight
.container-children
  display flex
  height 100%
  flex-direction column
  flex 1
  box-shadow 0 0 .15rem $violet
  padding 0.5rem 0.7rem
  border-radius 0.5rem
.container-children.false
  box-shadow 0 0 0 $violet
  padding: .5rem 0
