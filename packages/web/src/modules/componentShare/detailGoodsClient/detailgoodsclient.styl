.DetailGoods-client
    display flex
    min-height 4em
    direction rtl
    overflow hidden
    margin-top 0.8rem
    width 100%
    box-sizing border-box
    border-radius 0.5rem
.textHighly-goods-DetailGoods-client
    font-family FontMedium
    font-size 0.6rem
    flex 1
    padding 0.3rem 0.8rem 0.3rem 0
    margin 0
    background-color $white
.container-goods-DetailGoods-client
    display flex
    border 1px solid $grayLight
    border-right none
    overflow hidden
    border-radius 0.5rem 0 0 0.5rem
    flex: 1
    padding-right 0.8rem
    @media only screen and (max-width: 995px)  
        flex-direction: column
.fringeColor-DetailGoods-client
    width 0.5em
    background-color $blueLight
.firstCol-goods-DetailGoods-client
    flex: 3
    display flex
    flex-direction column
.firstRow-goods-DetailGoods-client
    display flex
    flex 1 1 2.5rem
    align-items center
.title-goods-DetailGoods-client
    white-space nowrap
    font-size 0.7rem
    margin 0
    margin-left 1em
    font-family FontDefault
    color $grayDark
.name-goods-DetailGoods-client
    margin 0 0 0 0.3rem
    font-family FontMedium
    font-size 0.8rem
.secondCol-goods-DetailGoods-client
    flex: 1
    display flex
    flex-direction column
.secondRow-goods-DetailGoods-client
    display flex
    align-items center
    flex 1 1 2.5rem
.newRequest-goods-DetailGoods-client
    margin 0
    font-family FontMedium
    color $blueDark
    font-size 0.9rem
.thirdCol-goods-DetailGoods-client
    flex: 2
    display flex
    flex-direction column
.nameEnglish-goods-DetailGoods-client
    font-size 0.7rem 
    font-family FontDefault
    margin 0
.icon-DetailGoods
    font-size: 0.7rem
    margin-left: 0.3rem
    color: $blueDark
.red_ic_heart
    color: $red