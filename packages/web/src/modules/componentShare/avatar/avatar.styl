.avatar-cnt 
    display flex
    flex-direction column
    justify-content center
    align-items center
    padding 1rem 0
    background-color white
.avatar-pic
    border-radius 50%
    height 3.8rem
    border 1px solid $blueDark
    width 3.8rem
    margin-bottom .5rem
.avtar-details
    display flex
    background-color $white
    width 90%
    flex-direction column
    align-items center
    padding .5rem 0
  .fullname
      font-family FontMedium
      font-size .9rem
      margin 0 0 .7rem 0
      text-align center
  .level
      font-family FontMedium
      color $grayLight
      font-size 0.6rem
      margin-bottom .5rem