.subhomeitem-home   
    display: flex
    align-items: center 
    justify-content: center
    margin: 0.5rem 0
    font-family: FontMedium
    position: absolute
    left 0;
    right 0
    @media only screen and (max-width: 1010px)  
        flex-direction: column
        flex-wrap:nowrap
        position: unset

.item-box-subhomeitem
    min-width: 5rem
    min-height: 5rem
    display: flex
    flex-direction: column
    justify-content: space-between
    margin: 0.3rem
    color: white
    align-items: center
    border-radius: 0.8rem 
.name-item-box-subhomeitem
    font-size: 0.75rem
    font-family: FontBold 
    text-align: center
    margin: 0.5rem 0 
.number-request-item-box-subhomeitem
    display: flex
    justify-content: center
    border-top: 1px solid #ffffff
    align-items: center
    width 80%
    padding: 0.5rem 0
    font-size: 0.6rem
    margin: 0.1rem 0