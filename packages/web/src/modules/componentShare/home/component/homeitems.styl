.homeItems-home  
    position relative
    width 100%
    display: flex 
    flex-direction: column
    justify-content: space-around
    align-items: center 
    font-family: FontMedium  
.header-items-homeItems
    height 10rem
    box-sizing: border-box
    display: flex
    justify-content: center
    flex-direction: column
.body-items-homeItemsname
    display: flex
    flex-direction: column
.top-body-items-homeItems 
    flex: 1
    padding: 1rem 0 
    display: flex
    position relative
    justify-content: center
    @media only screen and (max-width: 1010px)  
        flex-direction: column 
.row-items-homeItems 
    position relative
.bottom-body-items-homeItems
    justify-content: center
    flex: 1 
    flex-wrap: wrap
    padding: 1rem 0
    display: flex
.item-box-homeItems
    width: 7.5rem
    height : 7.5rem
    display: flex
    flex-direction: column
    justify-content: space-between
    margin: 0.5rem
    color: white
    align-items: center
    border-radius: 0.8rem
.item-color-red-box-homeItems
    background: linear-gradient(200deg, rgba(197,6,51,1)0%, rgba(255,102,0,1) 100%);
.item-color-blue-box-homeItems
    background: linear-gradient(200deg,  rgba(79,104,196,1)0% ,rgba(114,141,241,1) 100%);
.top-item-box-homeItems
    display: flex
    flex: 1
    flex-direction: column
    justify-content: center
    align-items: center
.name-item-box-homeItems
    font-size: 0.8rem
    font-family: FontBold 
    text-align: center
    line-height: 150%
    margin: 0.8rem 0 0.5rem 0;
.icon-header-item-box-homeItem
    font-size: 1.8rem
.name-bottom-item-box-homeItems
    font-size: 0.8rem    
.number-request-item-box-homeItems
    display: flex
    justify-content: center
    border-top: 1px solid #ffffff
    align-items: center
    width 80%
    padding: 0.5rem 0
    font-size: 0.8rem
    margin: 0.1rem 0
.number-green-request-item-box-homeItems
    display: flex
    justify-content: center
    border-top: 1px solid #ffffff
    align-items: center
    width 80%
    padding: 0.5rem 0
    font-size: 0.6rem
    margin: 0.1rem 0
.item-color-green-box-homeItems
    background: linear-gradient(200deg, rgba(79,196,88,1) 0%,  rgba(79,104,196,1) 100%);
    font-size: 1.5rem
    color: white
.i-blur
    filter:blur(0.2rem) opacity(80%)
.box-number-store-subdue-seller
    display: flex
    margin-top: 3rem
    justify-content: space-between
.number-store-subdue-seller
    color: $red
    margin: 0 1.5rem
.detail-items-homeItems-home
    display: flex
    align-items: center
    flex-direction: column
.item-margin-green-box-homeItems
    margin-top: 5rem 
.name-manger-header-homeItems
    text-align: center