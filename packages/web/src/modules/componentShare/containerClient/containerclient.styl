.ContainerClient
    display flex
    direction rtl
    box-shadow 1px 2px 10px 0px rgba(0,0,0,0.3)
    height 100%
    width 100%
    border-radius 5px
    flex-direction column 
.violetBorder-ContainerClient
    box-shadow: 0 0 0.15rem #702684;
    
.body-Container-backGround
    direction: rtl
    height: 100%  
    overflow-y: auto
    &::before
        content: ""
        position: absolute
        top: 0
        right: 0
        background-image url(../image/backgroundRegister/docter-ver.png)
        background-repeat no-repeat
        background-size cover
        background-position center
        height: 100%
        width 100%
        filter: blur(0.8rem) opacity(0.5);

.header-Container-client
    min-height 2.7rem
    color white
    background-color $blueLight
    display flex
    justify-content: space-between
    border-radius 5px 5px 0 0
    align-items center
.header-Container-client-yellow
    background-color $yellow
.header-Container-client-gray
    background-color $grayDark
.header-Container-client-blue
    background-color $blueLight
.header-Container-client-blueDark
    background-color $blueDark
.header-center-Container-client
    justify-content: center
.underConstruction-Container-client
    height 100%
    width 100%
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
.text-underConstruction-Container-client
    font-family: FontMedium
    color: $grayDark
    margin-top: 2.3rem
.img-underConstruction-Container-client
    height 50%
    width 50%
.text-header-Container-client
    margin 0
    font-size 1rem
    margin-right  1.5rem
    font-family FontBold
.body-Container-client
    padding 1rem 1.5rem 1.2rem 1.5rem
    background-color white
    display flex
    border-radius 0 0 5px 5px
    overflow-y: auto
    height 100%
    flex-direction column
.comeback-text-container-client
    font-size: 0.8rem
    font-family: FontMedium 
.comeback-container-client
    display: flex
    cursor:pointer
    margin-left: 1rem
    align-items: center
.icon-size-container-client
    font-size: 0.7rem
    padding-right: 0.5rem