.error-cnt
  font-family FontMedium
  display flex
  flex-direction column
  justify-content center
  min-width 12rem;
  padding 0 2rem
  background-color rgba(196, 79, 79, 0.51)
  font-size 0.8rem;
  min-height 2rem;
  border .1rem $red solid;
  border-radius 0.2rem;
  .row
      display flex
      justify-content center
  .text
    color $white
    display flex;
    flex-direction column;
    justify-content center;
  .icon
    display flex;
    flex-direction column;
    justify-content center;
    margin-left .5rem
  .icon:before
    color $white
    font-size .8rem
    font-weight bold

