.basic_setting_modal_box
  display flex
  flex-direction: column
  flex: 1
  justify-content space-around
  .details
      display flex
      flex-direction column
      align-items center
      height 75%
      padding-top 0.5rem
      .inputs
          display flex
          width 100%
          justify-content: space-evenly
        .selector
          display: flex
          align-items: center
          width: 28%
        .input
          display: flex
          align-items: center
          width: 28%
  .btns
    display flex
    height 10%
    width: 95%
    align-items: center
    flex-direction: row-reverse
    .btn
      font-size: .75rem
      padding: .5rem 1.5rem
    .btn:nth-child(1)
      margin: .5rem