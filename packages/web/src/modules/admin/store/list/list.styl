.seller_list
  .search_bar
    display: flex
    flex-wrap: wrap
    margin: 1rem 0 2rem 0
    .main_filter
      flex: 2
    .filter
      display: flex
      margin-right: 2rem
      flex: 1.7
      align-items: baseline
    & > :first-child
      margin-right: 0
    & > :last-child
            margin-right: 2rem
  .sellers
      width 100%
      overflow-y auto
      margin-top 0.5rem
      display flex
      flex-wrap wrap