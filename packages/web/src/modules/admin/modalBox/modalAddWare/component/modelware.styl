.modelware
    display: flex
    border-radius: 0.3rem
    box-shadow: 0 0 0.15rem $violet;
    overflow hidden
    margin-bottom: 0.5rem 
    font-family: FontMedium
.side-violet-modelware
    width: 0.7rem
    background-color: $violet
.side-yellow-modelware
    width: 0.7rem
    background-color: $yellow
.body-modelware
    padding: 0.5rem 0.7rem;
    display: flex 
    flex-direction: column
.field-modelware
    display: flex
    align-items: center
    flex 1
.box-button-detailware
    display: flex
    justify-content: flex-end
.field-modelGoods-modelware
    width 25%
.field-company-modelware
    width 30%
.field-brand-modelware
    width 18%
.field-id-modelware
    width 20%
.field-country-modelware
    display: flex
    width 30%
.field-company-orginal-modelware
    display: flex
    width 40%
    margin-right: 4rem
.row-modelware
    display: flex
    margin: 0.7rem 0 
.row-with-border
    border-top: 0.08rem solid rgba(112,38,132,0.3);
    padding: 0.7rem 0
.box-bottom-modalAddWare
    width: 90%;
    display: flex;
    align-items: center; 
    margin-bottom: 1rem
.box-button-modalAddWare
    display: flex;
    margin-top: 0.5rem
    height: 2rem;
    justify-content: space-between;