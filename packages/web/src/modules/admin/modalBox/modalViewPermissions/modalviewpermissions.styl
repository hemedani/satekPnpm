.modalViewPermissions
    display: flex;
    flex-direction: column;
    direction: ltr;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    font-family: FontMedium
.item-modalViewPermissions
    display: flex
    border-radius: 0.3rem
    align-items: center
    height 3rem
    justify-content: space-between
    direction: rtl
    margin: 1rem 0
    box-shadow: 0 0 0.15rem $violet;
.title-modalViewPermissions
    font-size: 0.7rem
    margin: 0
    padding-right: 0.5rem
    white-space: nowrap
.image-large-modalViewPermissions
    height 90%
    width: 95%
.image-small-modalViewPermissions
    height 80%
    width: 80%
.body-modalViewPermissions
    display flex   
    width 95%
    margin: 1rem 0
    justify-content: space-between;
    height 90%
.part-left-modalViewPermissions
    flex: 5
    margin-right: 1rem
.part-right-modalViewPermissions
    flex: 2
    display: flex
    flex-direction: column
    justify-content: center
.box-image-large-modalViewPermissions
    width 100%
    height 100%
    display: flex
    justify-content: center
    align-items: center
.box-image-small-modalViewPermissions
    width 4rem
    height 100%
    display: flex
    justify-content: center
    align-items: center
.box-bottom-modalViewPermissions
    width: 95%;
    display: flex; 
    align-items: center;
    padding-left: 1rem
    margin-bottom: 1rem;
.border-modalViewPermissions
    border: 1px solid $violet