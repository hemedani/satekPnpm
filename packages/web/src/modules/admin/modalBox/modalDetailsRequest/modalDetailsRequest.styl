.modal-container-detailrequest
    height calc(100% - 4rem)
    display: flex
    flex-direction: column
.modal-body-detailrequest
    flex: 1
    overflow-y: auto
    display: flex
    justify-content: space-between
    flex-direction: column
    @media only screen and (max-width: 995px)  
        flex-direction: row
.modal-box-btn-detailsrequest
    width: 95%
    display: flex
    margin: 0 0 1rem 2rem
    justify-content: flex-end
.text-item-detailrequest
    white-space nowrap
.size-text-item-detailrequest
    align-items: center
    display: flex
.itembox-modaldetailrequest
    flex 1 
.responsive-modaldetailrequest
    @media only screen and (max-width: 995px)  
        flex-direction: column
.modal-body-right-detailrequest
    flex: 1
    padding: 0 3rem
    @media only screen and (max-width: 995px)  
        padding: 0 0.5rem
.modal-body-left-detailrequest
    @media only screen and (max-width: 995px)  
        margin-left:  0.3rem