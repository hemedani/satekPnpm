.title-admin
    font-family FontDefault
    color $grayLight
    white-space nowrap
    font-size 0.8rem
.name-admin
    font-family FontMedium
    font-size 0.8rem
    line-height 170%
.link-style
    padding: 0.7rem 1rem
    text-decoration: none
.form-input-vertical
    display: flex
    flex-direction: column
    width 100%
    height 100%
.form-input-horizontal
    display: flex 
    width 100%
    height 100%
.none-border
    border: none
.grid-goods
    display: flex
    flex-wrap: wrap
    flex: unset
    direction: rtl
.input-share
    height 1.5rem
    width 100%
    box-shadow: 0 0 0.15rem #702684;
    border: none
    padding: 0 0.5rem
    border-radius: 0.2rem
.title-share
    font-family FontMedium
    color $grayDark 
    white-space nowrap
    font-size 0.8rem
//----
.Client
    display flex
    min-height 100vh
    flex-direction column
.body-Client
    display flex
    direction rtl
    flex 1
.navigation-Client
    width 100%
    height 3rem
.sidebar-Client
    flex 1
.inside-Client
    display flex
    background-color $white
    flex 6
    position relative
    width 85%
    margin: 1rem 0
    justify-content center 
.black-background-responsive-sidebar
    display none
    @media only screen and (max-width: 660px) 
        display: none; 
        position: fixed; 
        z-index: 1; 
        padding-top: 100px;
        left: 0;
        top: 3rem;
        width: 100%; 
        height: 100%;
        overflow: auto; 
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4); 
.black-show-background-responsive-sidebar
    display none
    z-index 2
    @media only screen and (max-width: 660px) 
        display: block;   
.container-Client
    display flex
    border-radius 0.5rem
    height 100%
    position: absolute
    flex-direction column
    align-items center 
    width 95% 