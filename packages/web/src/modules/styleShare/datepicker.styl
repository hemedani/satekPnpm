.DatePicker__input
    font-family: FontMedium
    width 100%
    padding: 0.3rem 0;
    border: none;
.DatePicker
    box-shadow: 0 0 0.15rem #702684;
    z-index :1
    border-radius: 0.2rem;
.DatePicker__calendarContainer
    font-family: FontMedium
    top calc(100% +1em)
.Calendar__weekDays
    color $grayDark
.Calendar 
    padding-top: 1em 
    background-color: #ebe4e4  
.Calendar__header
    margin-bottom: 1em 
.DatePicker::after
    border-color:transparent transparent #ebe4e4 transparent   
    top calc(100% + 0em)
    border-style: none
.responsive-calendar
    font-size: 7px !important;
.Calendar__day.-persian
    font-size: 0.85rem