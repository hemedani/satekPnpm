.containerRegisterStore 
  width 95%
  display flex
  border-radius 5px
  flex-direction column   
  height 100% 
.headerBoxRegisterStoreContainer
  background-color $blueDark
  display flex
  height 3em
  align-items center
  justify-content center
  border-radius 5px 5px 0 0
.headerNameContainer
  color white
  font-family FontBold
  margin 0
.bodyBoxRegisterStoreContainer
  display flex
  flex-direction column
  border 2px solid $blueDark
  height 100%
  border-radius 0 0 5px 5px

.topBodyBoxRegisterStoreContainerWithBtn
  height 90%
  width 100%

.topBodyBoxRegisterStoreContainerWithoutBtn
  height 100%
  width 100%
.bottomBodyBoxRegisterStoreContainer
  height 10%
  width 100%
  min-height:2rem
  direction:  ltr
  display flex
  margin-bottom 5px
  justify-content center

.itemContainerRegisterStore
  width 95%
  display flex
  justify-content space-between
  align-items center
  height 100%


.btnContainerRegisterStore
  background-color $blueDark
  color white
  border none
  min-height 2em
  height 65%
  width 20%
  border-radius 5px

.selectorInput
  width 47%
  background-color white
  height 2.5em
  border-radius 5px
  font-size 0.6rem
.link-ContainerRegister-register
  text-decoration none
  color: $blueDark
  font-family: FontMedium
