.uploaddouments
    display: flex
    height 100%
    width 100%
    flex-direction: column
    align-items: center
    justify-content: space-between

.text-input-box-seller
    display: flex
    flex: 3
    flex-flow: column wrap


.text-input-box-seller > *
    margin: 0.75em 1.5em 0.75em 0

.image-input-seller
    display: flex
    flex: 1
    border: 3px solid green
    justify-content: center
    align-items: center

.input-box-seller
    display: flex
    flex: 1
    flex-flow: row wrap

.input-name-seller
    max-width: 60%
    display: flex
    align-items: center

.input-description-seller
    max-width: 80%

.description-box-seller
    display: flex
    flex: 1
    flex-flow: row wrap
    width: 80%
    textarea
        flex: 1
        display: flex
        height 4rem
        border-radius: 0.2rem;
        padding: 0.3rem 0.5rem;
        border: 0px solid #702684;
        box-shadow: 0 0 0.15rem #702684;
    p
        width: 5rem
        justify-content: flex-start
        align-items: flex-start
        font-family: "IRANSANS_MEDIUM";
        color: #707070;
        margin: 0;
        font-size: 0.8rem;

