.documentListItem-button-box
    display: flex
    flex: 1
    align-items: center
    align-content: center
    justify-content: center   
    border-bottom:  1px solid $grayDark
    flex-flow: row wrap
    direction: rtl
    margin: 0.5rem 0

.documentListItem-data-box
    display: flex
    flex: 5
    flex-direction: column

    .row
        display: flex
        flex-direction: row
        align-content: space-around

        .title
            white-space: nowrap;
            font-size: 0.7rem;
            margin: 0;
            margin-left: 1em;
            font-family: "IRANSANS";
            color: #707070;
            line-height: 170%
            

        .description
            margin: 0;
            font-family: "IRANSANS_MEDIUM";
            font-size: 0.8rem;
            line-height: 170%

    .row > *
        display: flex
        flex-direction: row
        align-content: space-between
        flex: 4
        margin: 0.8em

 
.buttonBox-showPicture-seller
    display: flex
    justify-content: center
    flex: 1


