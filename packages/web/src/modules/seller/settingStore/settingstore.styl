.top-settingStore-seller
    display: flex
    justify-content: space-between
    font-family: FontMedium
    color: $grayDark
    margin-bottom: 1rem
.part-settingStore-seller
    width: 48%
.first-settingStore-seller
    display: flex
    padding: 0 0.8rem
    font-size: 0.8rem
    margin: 0.2rem 0
    justify-content: space-between
.first-withBorder-settingStore-seller
    border-bottom: 1px $grayLight solid
    padding-bottom: 0.5rem
.infoMany-settingStore-seller
    font-size: 0.8rem
    line-height: 170%
.btnBox-settingStore-seller
    direction: ltr
.bottom-settingStore-seller
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-top: 1rem;
.item-settingStore-seller
    display: flex
    width 80%
    margin: 0.7rem
    justify-content: space-between
    .state_parser
        width: 100%
        display: flex
        align-items: center
    .state_parser_label
        font-size: 0.8rem
        width: 9.5rem
        color: #2b2b2b
        margin-left: 13px
        padding: 0.3rem
.checkBox-settingStore-seller
    font-size: 0.7rem;
    margin: 0;
    color: $Dark;
    padding: 0.3rem
    width: 9.5rem;
    font-family: "IRANSANS_MEDIUM"
.field-item-settingStore-seller
    display: flex
    align-items: center
.buttonBox-settingStore-seller
    display: flex
    flex: 1
    justify-content: flex-end
    align-items: flex-end
    margin-bottom: 1rem