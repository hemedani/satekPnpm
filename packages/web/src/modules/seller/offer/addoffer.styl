.addoffer
    display flex
    flex-direction: column
    height 100%
    padding-bottom: 1rem
    p
    margin: 0
.body-addoffer
    display: flex
    justify-content: center
    align-items: center
    flex: 1
.bottom-addoffer
    display: flex
    justify-content: flex-end
.field-inputs-item-addoffer
    display: flex
    align-items: center
    margin: 2rem 0 3rem 0
    p
        white-space nowrap
.field-notification-item-addoffer
    display: flex
    align-items: center
    margin-bottom: 0.7rem
    p 
        font-family: FontMedium
        font-size: 0.7rem
        color: $grayLight
        margin: 0 0.5rem 0 0
        line-height: 170%
.expiration-date-addoffer
    align-items: center
    display: flex
    margin-left: 5rem
    width: 30%
.value-addoffer
    display: flex
    align-items: center
    margin-right: 5rem
    width: 25%
.title-small-addoffer
    font-family: FontMedium
    font-size: 0.6rem
.title-addoffer
    font-family: FontMedium
    font-size: 0.8rem
.icon-notification-addoffer
    font-size: 0.8rem
.input-addoffer
    margin: 0 1rem 0 0.5rem
    height 1.5rem
    width 100%
    box-shadow: 0 0 0.15rem #702684;
    border: none
    border-radius: 0.2rem
