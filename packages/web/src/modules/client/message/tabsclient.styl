.tabs-client
    display flex
    width 100%
    height 3em
    align-items flex-end
    direction rtl
    color white
.tab-select-client
    display flex
    width 18%
    border-radius 6px 6px 0 0
    justify-content center
    align-items center
    height 100%
    margin-left 3px
    background-color $blueLight
    font-family "IRANSANS_Bold"
    font-size 1.1rem
.tab-notselect-client
    width 18%
    height 90%
    display flex
    border-radius 6px 6px 0 0
    justify-content center
    align-items center
    margin-left 3px
    background-color gray
    font-family "IRANSANS_Bold"
    font-size 0.9rem

