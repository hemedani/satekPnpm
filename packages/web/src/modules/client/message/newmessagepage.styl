.NewMessagePage
    display flex
    min-height 100vh
    flex-direction column
.body-NewMessagePage
    display flex
    direction rtl
    flex 1
.container-NewMessagePage
    display flex
    flex-direction column
    height 95%
    align-items center
    width 95%
.container-messages-NewMessagePage
    height 100%
    border-radius 0.5rem  0 0.5rem  0.5rem
    width 100%
    display flex
    align-items center
    flex-direction column
    background-color white
    box-shadow:1px 2px 10px 0px rgba(0,0,0,0.3)

.inside-NewMessagePage
    display flex
    background-color $white
    flex 6
    width 85%
    justify-content center
    align-items center
.sidebar-NewMessagePage
    box-shadow -1px 0px 15px 0px rgba(0,0,0,0.1)
    width 15%