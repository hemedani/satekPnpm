.side-client
    display flex
    flex-direction column
    box-shadow -1px 0px 15px 0px rgba(0,0,0,0.1)
    width:97%
    justify-content space-between
    height 100%
.boxImage-profile-side-client
    flex-basis 4em
    display flex
    justify-content center
    align-items center
.namePersonal-profile-client
    font-family FontMedium
    margin:0
    color $dark
    font-size 0.9rem
.image-profile-side-client
    border-radius 50%
    height 3.8rem
    border 1px solid blue
    width 3.8rem
.post-text-profile-client
    font-family FontLight
    padding 0
    font-size 0.55rem
    text-align center
.listsAndProfileDetail-side-client
    display flex
    flex-direction column
.field-side-client
    font-size 0.8rem
    display flex
    color $dark
    margin 0.4rem 0 0.2rem 0
    direction rtl
    font-family FontDefault
    padding 0 1em 0 0
    flex-direction column
    list-style-type none
.box-text-profile-client
    display flex
    justify-content center
.text-profile-client
    display flex
    background-color $white
    width 90%
    flex-direction column
    align-items center
.field-side-client li
    margin-top 0.4rem
.header-field-side-client
    margin 0.3rem 0 0.5rem 0
    font-size 0.9rem
    color $grayDark
    font-family FontMedium
.footer-side-client
    display flex
    flex-direction column
    align-items center
    background-color #E19C13
.textUp-footer-side-client
    font-family FontMedium
    font-size 0.5rem
.textDown-footer-side-client
    font-size 0.7rem
    font-family FontBold