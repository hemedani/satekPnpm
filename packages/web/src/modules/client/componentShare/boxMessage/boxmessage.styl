.boxMessage-clientAdmin
    display flex
    margin-top 1rem
    flex-direction column
    border-radius 0.5rem
    direction rtl 
    box-sizing border-box
    overflow hidden
.head-boxMessage-clientAdmin
    flex 1 1 2rem
    color white
    display flex
    background-color $blueDark
    align-items center
    justify-content space-between
.head-boxMessage-yellow-clientAdmin
    background-color #E19C19
.head-boxMessage-gray-clientAdmin
    background-color $grayDark
.head-boxMessage-blue-clientAdmin
    background-color $blueDark
.head-boxMessage-violet-clientAdmin
    background-color $violet
.fieldEdit-boxMessage-clientAdmin
    display flex
    background-color $white
    font-family FontMedium
    font-size 0.6rem
    min-height 1.4rem
    align-items center
    justify-content space-between
.sendBy-boxMessage-clientAdmin
    display flex
.editDelete-boxMessage-clientAdmin
    display flex
.delete-boxMessage-clientAdmin
    margin 0 0 0 1rem
    color $red
.edit-boxMessage-clientAdmin
    color $blueDark
    margin 0 0 0 1rem
.title-boxMessage-clientAdmin
    color $grayLight
    margin 0 0.5rem 0 0
.nameSendBy-boxMessage-clientAdmin
    margin 0
.detailSpecifications-head-boxMessage-clientAdmin
    display flex
    margin-right 0.9rem
    align-items center
.withImage-body-boxMessage-clientAdmin
    flex 5 1 13rem
    display flex
    border-bottom  none
    border-radius 0 0 0.5rem 0.5rem
    border 1px solid $grayLight
    flex-direction column
.withoutImage-body-boxMessage-clientAdmin
    flex 5 1 7rem
    display flex
    border-radius 0 0 0.5rem 0.5rem
    border 1px solid $grayLight
    border-top none
    flex-direction column
.withImage-textMessage-body-boxMessage-clientAdmin
    font-size 0.7rem
    font-family FontLight
    height 100%
    margin 1rem 2rem 0 2rem
    color $grayDark
    width 75%
    line-height: 170%
.withoutImage-textMessage-body-boxMessage-clientAdmin
    font-size 0.7rem
    font-family FontLight
    color $grayDark
    line-height: 170%
    height 100%
    width 100%
    margin 1rem 0.8rem 0 0
.message-body-boxMessage-clientAdmin
    flex 3 1 3rem
    display flex
.box-image-message-body-boxMessage-clientAdmin
    width 25%
    display flex
    justify-content center
    align-items center
.image-message-body-boxMessage-clientAdmin
