    height  80%
.details-body-boxMessage-clientAdmin
    display flex
    justify-content space-between
    flex 1 1 2rem
    align-items center
.applying-body-boxMessage-clientAdmin
    display flex
    flex-basis 15rem
    justify-content space-between
    background-color $white
    border-radius 0.4rem
    min-height 1rem
    height 2rem
    align-items center
    margin-right 1rem
.boxAnswer-body-boxMessage-clientAdmin
    flex-basis 4rem
    margin-left 0
.text-head-boxMessage-clientAdmin
    white-space nowrap
    margin 0
    font-family FontMedium
