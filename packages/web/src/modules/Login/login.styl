  .pagelogo
    min-height 100vh
    display flex
    background-image url(../image/backgroundRegister/loginfullillustration.svg)
    background-repeat no-repeat
    background-size cover
    background-position center
    box-sizing border-box 
    @media only screen and (max-width: 500px)  
      background-position: right 
  .logoPhoneCode
    flex 1    
    margin-bottom: 3rem
    display flex
    justify-content center
    align-items center
  .loginStore
    flex 7 1
    display flex
    margin-left 43%
    @media only screen and (max-width: 500px)  
      margin 0 
  .loginStoreLeft
    flex 1
    min-height 20em
    display flex
    justify-content center
    align-items center
  .registerStoreLeft
    flex 5
    min-height 20em
    padding: 1rem 0;
    display flex
    justify-content center
    align-items center
  .boxRegisterStorePhoneCode
    height 90%
    width 90%
    display flex
    border-radius 5px
    flex-direction column
  .fieldFormStorePhoneCode
    display flex
    flex 2
    min-height 5em
    align-items center
    justify-content: space-between
    flex-direction column
  .inner-input-login
    display: flex
    direction: rtl
    align-items: center
    width 100%
    @media only screen and (max-width: 800px) 
      flex-direction: column
  .formStylePhoneCode
    display flex
    width 65%
    height 65%
    flex-direction: column
    min-height 5em
    align-items center
    justify-content space-around 
  .inputPhoneCode
    width 85%
    height 25%
    border 1px solid black
    direction rtl
    border-radius 5px
    padding 5px
  input[type=number]::-webkit-inner-spin-button, 
  input[type=number]::-webkit-outer-spin-button  
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    margin: 0; 
::-webkit-input-placeholder 
    direction: rtl;

:-moz-placeholder 
    direction: rtl;

::-moz-placeholder 
    direction: rtl;

:-ms-input-placeholder 
    direction: rtl;
  .inputPhone:-moz-placeholder 
    direction: ltr 
    padding:0
    margin: 2rem
    color: $grayDrak
  .inputPhone:-ms-input-placeholder 
    direction: ltr 
    padding:0
    margin: 2rem
    color: $grayDrak
  .inputPhone::-moz-placeholder 
    direction: ltr 
    padding:0
    margin: 2rem
    color: $grayDrak
  .inputPhone::-webkit-input-placeholder
    direction: ltr 
    padding:0
    margin: 2rem
    color: $grayDrak
  .inputPhone
    width 85%
    height 2.5rem  
    margin:0 0 1rem 1rem
    border 1px solid black
    border-radius 5px
    padding:0 0 0 2% 
    color: $dark
  .button-login
    white-space nowrap
  .notation
    margin: 0
    color: $violet
  .input-box-login
    width 100%
  .sub-notation-login
    font-size: 0.7rem
    display: flex
    margin: 0
    width: 85%
    justify-content: space-between
  .phone-notation-login 
    margin: 0 0 0 -1.5rem
    color: $dark
  .btnBoxPhoneCodeSubmit
    margin-right: 0.6rem 
    display: flex
    flex-direction: column
    align-items: center
  .phoneCodeSubmit
    min-height 2.5em
    background-color blue
    color white
    margin: 1rem 0
    border none
    width 30%
    border-radius 5px
  .field-note-login
    font-family: FontMedium
    display: flex
    flex-direction: column
    width :90%
    font-size: 0.8rem 
    direction: rtl
  .buttonPhoneCode
    width 50%
    height 2.5em
    direction rtl
  .note-text-login
    color: $grayDark
  .error-text-login
    margin: 0 0 1rem 0
    margin: 0
    color: $red
  .help-text-login
    margin: 1rem 0 1rem 0
    color: $grayDark
    font-size: 0.8rem
    font-family: FontMedium
  .sub-link-login
    font-family: FontMedium
    display: flex
    direction: rtl
    color: $violet
    padding: 0
    width 75%
    list-style: none;
    font-size: 0.75rem
    justify-content: space-between
    align-items: center
    @media only screen and (max-width: 500px) 
      flex-direction: column
      margin-top: 2rem
      li
        margin: 0.2rem 0
  
  
  